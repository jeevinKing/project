/**index.wxss**/
.wrap {
	 /* margin: 10rpx;  */
	font-size: 28rpx;
	color: #333;
}
.wrap-title {
	font-weight: 700;
	text-align: center;
	font-size: 36rpx;
	color: #e6f9f7;
    background-color: #06c1ae;
	padding: 20rpx;
}
.wrap-search {
    margin: 10rpx;
	height: 80rpx;
    line-height: 80rpx;
	margin-top: 20rpx;
	border: 2rpx solid #eee;
}
.wrap-search input {
	width: 100%;
	height: 100%;
	text-align: center;
	color: #666;
}
.wrap-info {
    margin: 10rpx;
    background-color: #50d3c6;
    margin-top: 20rpx;
    padding: 20rpx;
    color: #e6f9f7;
    height: 80rpx;
    line-height: 44rpx;
    text-align: justify;
    border-radius: 10rpx;
}

.error {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
	background-color: lightgoldenrodyellow;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    color: lightcoral;
}

.wrap-item {
    padding: 20rpx 10rpx;
    color: #666;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #e8e8e8;
    
}

.person-info {
    position: fixed;
    left: 0;
    bottom: 80rpx;
    width: 100%;
    background-color: #50d3c6;
    color: #e6f9f7;
    padding: 20rpx 60rpx;
    line-height: 44rpx;
    
}